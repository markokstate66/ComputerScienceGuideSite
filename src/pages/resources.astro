  },
  {
    title: "The Pragmatic Programmer",
    author: "David Thomas & Andrew Hunt",
    description: "Timeless advice on software craftsmanship and career development. Updated 20th anniversary edition with modern best practices.",
    tags: ["Classic", "All Levels"],
    amazonUrl: "https://www.amazon.com/Pragmatic-Programmer-journey-mastery-Anniversary/dp/0135957052?tag=dreamscribe09-20",
    imageUrl: "https://m.media-amazon.com/images/I/51cUVaBWZzL._SX218_.jpg"
  },
  {
    title: "Design Patterns: Elements of Reusable Object-Oriented Software",
    author: "Gang of Four",
    description: "The classic book on reusable object-oriented design patterns. Essential knowledge for software architects and senior developers.",
    tags: ["Advanced", "Architecture"],
    amazonUrl: "https://www.amazon.com/Design-Patterns-Elements-Reusable-Object-Oriented/dp/0201633612?tag=dreamscribe09-20",
