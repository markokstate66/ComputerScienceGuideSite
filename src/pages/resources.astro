---
import BaseLayout from '../layouts/BaseLayout.astro';

const books = [
  {
    title: "Clean Code: A Handbook of Agile Software Craftsmanship",
    author: "Robert C. Martin",
    description: "A must-read for writing maintainable, professional software. Learn to write code that's easy to read, understand, and modify.",
    tags: ["Best Seller", "All Levels"],
    amazonUrl: "https://www.amazon.com/Clean-Code-Handbook-Software-Craftsmanship/dp/0132350882?tag=dreamscribe09-20",
    imageUrl: "https://m.media-amazon.com/images/I/41xShlnTZTL._SX218_.jpg"
  },
  {
    title: "Introduction to Algorithms (CLRS)",
    author: "Cormen, Leiserson, Rivest, Stein",
    description: "The definitive textbook on algorithms. Comprehensive and rigorous coverage of algorithms and data structures used worldwide in universities.",
    tags: ["Advanced", "Textbook"],
    amazonUrl: "https://www.amazon.com/Introduction-Algorithms-3rd-MIT-Press/dp/0262033844?tag=dreamscribe09-20",
    imageUrl: "https://m.media-amazon.com/images/I/41T0iBxY8FL._SX218_.jpg"
  },
  {
    title: "Cracking the Coding Interview",
    author: "Gayle Laakmann McDowell",
    description: "189 programming questions and solutions. The essential guide for technical interview preparation at top tech companies.",
