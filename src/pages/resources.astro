  }
];

const practice = [
  {
    title: "LeetCode",
    description: "2000+ coding problems with company-specific questions. Essential for FAANG-level interview preparation.",
    url: "https://leetcode.com/",
    features: ["Company-tagged problems", "Weekly contests", "Discussion forums"],
    logoUrl: "https://leetcode.com/static/images/LeetCode_logo_rvs.png"
  },
  {
    title: "HackerRank",
    description: "Practice problems, competitions, and skill certifications. Great for building a verified skill profile.",
    url: "https://www.hackerrank.com/",
    features: ["Skill certifications", "Interview prep kits", "Domain-specific challenges"],
    logoUrl: "https://www.hackerrank.com/wp-content/uploads/2018/08/hackerrank_logo.png"
  },
  {
    title: "Codewars",
    description: "Community-driven coding challenges (kata) with a ranking system. Level up from 8 kyu to 1 dan.",
    url: "https://www.codewars.com/",
    features: ["Gamified progression", "Multiple languages", "Community solutions"],
    logoUrl: "https://www.codewars.com/packs/assets/logo.61192cf7.svg"
  },
  {
    title: "Exercism",
    description: "Free coding exercises with optional mentorship in 60+ programming languages. Learn idiomatically.",
    url: "https://exercism.org/",
    features: ["Human mentorship", "60+ languages", "Learning tracks"],
    logoUrl: "https://assets.exercism.org/assets/icons/exercism-with-logo-black-b427c06c6b8a89cb43a26a9e9116df10.svg"
  },
  {
    title: "Project Euler",
    description: "Mathematical and computational problems for the analytically minded. Great for developing algorithmic thinking.",
    url: "https://projecteuler.net/",
    features: ["500+ problems", "Math-focused", "Progress tracking"],
    logoUrl: "https://projecteuler.net/themes/logo_default.png"
  }
];

const tools = [
  {
    title: "Visual Studio Code",
    description: "Free, powerful code editor with excellent extension ecosystem. The most popular choice for web developers.",
    url: "https://code.visualstudio.com/",
    category: "Editor"
  },
  {
    title: "Git",
    description: "Essential version control system. Learn it early and use it for every project.",
    url: "https://git-scm.com/",
    category: "Version Control"
  },
  {
    title: "GitHub",
    description: "Host code, collaborate on projects, and build your portfolio. Includes free CI/CD with GitHub Actions.",
    url: "https://github.com/",
    category: "Platform"
  },
  {
    title: "Postman",
    description: "API development and testing tool. Essential for backend development and debugging.",
    url: "https://www.postman.com/",
    category: "API"
  },
  {
    title: "Docker",
    description: "Containerization platform for consistent development environments. Industry standard for deployment.",
    url: "https://www.docker.com/",
    category: "DevOps"
  },
  {
    title: "Figma",
    description: "Collaborative design tool. Useful for frontend developers to work with designs and create mockups.",
    url: "https://www.figma.com/",
    category: "Design"
  }
];
---

<BaseLayout
  title="Computer Science Resources"
  description="Curated list of the best programming books, online courses, practice platforms, and developer tools for learning computer science."
>
  <section class="hero" style="padding: 3rem 0;">
    <div class="container">
      <h1>Learning Resources</h1>
      <p>Curated books, courses, and tools to accelerate your learning journey</p>
    </div>
  </section>

  <!-- Books Section -->
  <section class="section">
    <div class="container">
      <h2 id="books">Recommended Books</h2>
      <p class="section-subtitle">Essential reading for every developer's bookshelf</p>

      <div class="books-grid">
        {books.map(book => (
          <div class="book-card">
            <a href={book.amazonUrl} class="book-cover" target="_blank" rel="noopener">
              <img src={book.imageUrl} alt={book.title} loading="lazy" />
            </a>
            <div class="book-info">
              <h3>{book.title}</h3>
              <p class="book-author">by {book.author}</p>
              <p class="book-description">{book.description}</p>
              <div class="book-tags">
                {book.tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
              <a href={book.amazonUrl} class="book-link" target="_blank" rel="noopener">
                View on Amazon
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Courses Section -->
  <section class="section section-alt">
    <div class="container">
      <h2 id="courses">Online Courses</h2>
      <p class="section-subtitle">Structured learning paths from beginner to advanced</p>

      <div class="courses-grid">
        {courses.map(course => (
          <div class="course-card">
            <div class="course-header">
              <div class="course-header-top">
                <a href={course.url} class="course-logo" target="_blank" rel="noopener">
                  <img src={course.logoUrl} alt={course.platform} loading="lazy" />
                </a>
                <span class={`course-badge ${course.free ? 'badge-free' : 'badge-paid'}`}>
                  {course.free ? 'Free' : 'Paid'}
                </span>
              </div>
              <h3>{course.title}</h3>
              <p class="course-platform">{course.platform}</p>
            </div>
            <div class="course-content">
              <p>{course.description}</p>
              <div class="course-meta">
                <span class="meta-item">
                  <strong>Duration:</strong> {course.duration}
                </span>
                <span class="meta-item">
                  <strong>Level:</strong> {course.level}
                </span>
              </div>
              <div class="course-topics">
                <strong>Topics Covered:</strong>
                <ul>
                  {course.topics.map(topic => (
                    <li>{topic}</li>
                  ))}
                </ul>
              </div>
              <a href={course.url} class="course-link" target="_blank" rel="noopener">
                View Course
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Practice Section -->
  <section class="section">
    <div class="container">
      <h2 id="practice">Practice Platforms</h2>
      <p class="section-subtitle">Sharpen your skills with coding challenges</p>

      <div class="practice-grid">
        {practice.map(platform => (
          <a href={platform.url} class="practice-card" target="_blank" rel="noopener">
            <div class="practice-logo">
              <img src={platform.logoUrl} alt={platform.title} loading="lazy" />
            </div>
            <h3>{platform.title}</h3>
            <p>{platform.description}</p>
            <div class="practice-features">
              {platform.features.map(feature => (
                <span class="feature-tag">{feature}</span>
              ))}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Tools Section -->
  <section class="section section-alt">
    <div class="container">
      <h2 id="tools">Developer Tools</h2>
      <p class="section-subtitle">Essential tools for your development workflow</p>

      <div class="tools-grid">
        {tools.map(tool => (
          <a href={tool.url} class="tool-card" target="_blank" rel="noopener">
            <span class="tool-category">{tool.category}</span>
            <h3>{tool.title}</h3>
            <p>{tool.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <style>
    .section-subtitle {
      text-align: center;
      color: var(--color-text-muted);
      font-size: 1.1rem;
      margin-bottom: 2.5rem;
    }

    /* Books Grid */
    .books-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
      gap: 1.5rem;
    }

    .book-card {
      background: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 1.5rem;
      display: flex;
      gap: 1.25rem;
      transition: box-shadow 0.2s, transform 0.2s;
    }

    .book-card:hover {
      box-shadow: 0 4px 20px var(--color-shadow);
      transform: translateY(-2px);
    }

    .book-cover {
      flex-shrink: 0;
    }

    .book-cover img {
      width: 100px;
      height: auto;
      border-radius: 4px;
      box-shadow: 0 2px 8px var(--color-shadow);
      transition: transform 0.2s;
    }

    .book-cover:hover img {
      transform: scale(1.05);
    }

    .book-info {
      flex: 1;
      min-width: 0;
    }

    .book-info h3 {
      margin: 0 0 0.5rem;
      font-size: 1.1rem;
      line-height: 1.4;
    }

    .book-author {
      color: var(--color-text-muted);
      font-size: 0.9rem;
      margin: 0 0 0.75rem;
    }

    .book-description {
      color: var(--color-text-muted);
      font-size: 0.95rem;
      margin: 0 0 1rem;
      line-height: 1.6;
    }

    .book-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 1rem;
    }

    .tag {
      background: var(--color-bg-alt);
      color: var(--color-text-muted);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
    }

    .book-link {
      display: inline-block;
      background: var(--color-primary);
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-weight: 600;
      font-size: 0.9rem;
      transition: background 0.2s;
    }

    .book-link:hover {
      background: var(--color-primary-dark);
      text-decoration: none;
      color: white;
    }

    /* Courses Grid */
    .courses-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
      gap: 1.5rem;
    }

    .course-card {
      background: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      overflow: hidden;
      transition: box-shadow 0.2s, transform 0.2s;
    }

    .course-card:hover {
      box-shadow: 0 4px 20px var(--color-shadow);
      transform: translateY(-2px);
    }

    .course-header {
      padding: 1.25rem 1.5rem;
      border-bottom: 1px solid var(--color-border);
    }

    .course-header-top {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 0.75rem;
    }

    .course-logo {
      display: block;
      width: 60px;
      height: 60px;
      border-radius: 8px;
      overflow: hidden;
      background: var(--color-bg-alt);
      padding: 8px;
      transition: transform 0.2s;
    }

    .course-logo:hover {
      transform: scale(1.05);
    }

    .course-logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .course-badge {
      display: inline-block;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.7rem;
      font-weight: 700;
      text-transform: uppercase;
    }

    .badge-free {
      background: #d1fae5;
      color: #065f46;
    }

    .badge-paid {
      background: #fef3c7;
      color: #92400e;
    }

    .course-header h3 {
      margin: 0 0 0.25rem;
      font-size: 1.1rem;
    }

    .course-platform {
      color: var(--color-text-muted);
      font-size: 0.9rem;
      margin: 0;
    }

    .course-content {
      padding: 1.25rem 1.5rem;
    }

    .course-content > p {
      color: var(--color-text-muted);
      font-size: 0.95rem;
      margin: 0 0 1rem;
      line-height: 1.6;
    }

    .course-meta {
      display: flex;
      gap: 1.5rem;
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }

    .meta-item {
      color: var(--color-text-muted);
    }

    .meta-item strong {
      color: var(--color-text);
    }

    .course-topics {
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }

    .course-topics strong {
      display: block;
      margin-bottom: 0.5rem;
    }

    .course-topics ul {
      margin: 0;
      padding-left: 1.25rem;
      color: var(--color-text-muted);
    }

    .course-topics li {
      margin-bottom: 0.25rem;
    }

    .course-link {
      display: inline-block;
      color: var(--color-primary);
      font-weight: 600;
      font-size: 0.9rem;
    }

    .course-link:hover {
      color: var(--color-primary-dark);
    }

    /* Practice Grid */
    .practice-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 1.5rem;
    }

    .practice-card {
      background: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 1.5rem;
      text-decoration: none;
      color: inherit;
      transition: box-shadow 0.2s, transform 0.2s;
    }

    .practice-card:hover {
      box-shadow: 0 4px 20px var(--color-shadow);
      transform: translateY(-2px);
      text-decoration: none;
    }

    .practice-logo {
      width: 50px;
      height: 50px;
      margin-bottom: 1rem;
      border-radius: 8px;
      overflow: hidden;
      background: var(--color-bg-alt);
      padding: 8px;
    }

    .practice-logo img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    .practice-card h3 {
      margin: 0 0 0.5rem;
      color: var(--color-text);
    }

    .practice-card:hover h3 {
      color: var(--color-primary);
    }

    .practice-card p {
      color: var(--color-text-muted);
      margin: 0 0 1rem;
      font-size: 0.95rem;
    }

    .practice-features {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .feature-tag {
      background: var(--color-bg-alt);
      color: var(--color-text-muted);
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      font-size: 0.75rem;
    }

    /* Tools Grid */
    .tools-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
    }

    .tool-card {
      background: var(--color-bg);
      border: 1px solid var(--color-border);
      border-radius: 12px;
      padding: 1.5rem;
      text-decoration: none;
      color: inherit;
      transition: box-shadow 0.2s, transform 0.2s;
    }

    .tool-card:hover {
      box-shadow: 0 4px 20px var(--color-shadow);
      transform: translateY(-2px);
      text-decoration: none;
    }

    .tool-category {
      display: inline-block;
      background: var(--color-primary);
      color: white;
      padding: 0.2rem 0.5rem;
      border-radius: 4px;
      font-size: 0.7rem;
      font-weight: 700;
      text-transform: uppercase;
      margin-bottom: 0.75rem;
    }

    .tool-card h3 {
      margin: 0 0 0.5rem;
      color: var(--color-text);
    }

    .tool-card:hover h3 {
      color: var(--color-primary);
    }

    .tool-card p {
      color: var(--color-text-muted);
      margin: 0;
      font-size: 0.95rem;
    }

    @media (max-width: 768px) {
      .books-grid,
      .courses-grid,
      .practice-grid,
      .tools-grid {
        grid-template-columns: 1fr;
      }

      .book-card {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .book-cover img {
        width: 120px;
      }

      .book-tags {
        justify-content: center;
      }

      .course-meta {
        flex-direction: column;
        gap: 0.5rem;
      }
    }
  </style>
</BaseLayout>
