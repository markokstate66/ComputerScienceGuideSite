    amazonUrl: "https://www.amazon.com/Designing-Data-Intensive-Applications-Reliable-Maintainable/dp/1449373321?tag=dreamscribe09-20",
    imageUrl: "https://m.media-amazon.com/images/I/51ZSpMl1-LL._SX218_.jpg"
  },
  {
    title: "You Don't Know JS (Book Series)",
    author: "Kyle Simpson",
    description: "Deep dive into JavaScript mechanics. Goes beyond surface-level understanding to explain how JavaScript really works under the hood.",
    tags: ["JavaScript", "Intermediate"],
    amazonUrl: "https://www.amazon.com/You-Dont-Know-JS-Yet-ebook/dp/B084BNMN7T?tag=dreamscribe09-20",
    imageUrl: "https://m.media-amazon.com/images/I/41T5H8u7fUL._SX218_.jpg"
  },
  {
    title: "System Design Interview",
    author: "Alex Xu",
    description: "An insider's guide to system design interviews. Learn to design scalable systems like URL shorteners, chat apps, and news feeds.",
    tags: ["Interviews", "System Design"],
    amazonUrl: "https://www.amazon.com/System-Design-Interview-insiders-Second/dp/B08CMF2CQF?tag=dreamscribe09-20",
    imageUrl: "https://m.media-amazon.com/images/I/4129lOcVWtL._SX218_.jpg"
  }
];

const courses = [
  {
    title: "CS50: Introduction to Computer Science",
    platform: "Harvard / edX",
    description: "World-famous intro course taught by David Malan. Covers C, Python, SQL, web development, and more. The best starting point for beginners.",
