---
interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  canonical = Astro.url.href,
  ogImage = '/og-default.png',
  noindex = false
} = Astro.props;

const siteName = 'Computer Science Guide';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator}>

  <!-- Primary Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle}>
  <meta name="description" content={description}>
  {noindex && <meta name="robots" content="noindex, nofollow">}

  <!-- Canonical URL -->
  <link rel="canonical" href={canonical}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonical}>
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, Astro.site)}>
  <meta property="og:site_name" content={siteName}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonical}>
  <meta property="twitter:title" content={fullTitle}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={new URL(ogImage, Astro.site)}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

  <!-- Preconnect to Google Ads -->
  <link rel="preconnect" href="https://pagead2.googlesyndication.com">
  <link rel="preconnect" href="https://www.googletagservices.com">

  <!-- Google AdSense -->
  <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6676281664229738" crossorigin="anonymous"></script>

  <!-- Azure Application Insights -->
  <script>
    var defined,connectionString="InstrumentationKey=56e3930d-2200-4571-82b1-71ca51404713;IngestionEndpoint=https://eastus2-3.in.applicationinsights.azure.com/";
    !(function(e,n,t,i,o,r,s,a,c,l,d,u,p){
      function h(e,n){return typeof e===n}function f(e){var n=document.createElement("script");n.src=e,n.async=!0,n.onload=function(){},document.head.appendChild(n)}
      e[o]=e[o]||function(){(e[o].q=e[o].q||[]).push(arguments)},e[o].v="1.0.0",e[o].r=r,
      e[o]("init",{connectionString:connectionString,autoTrackPageVisitTime:!0,autoExceptionInstrumented:!0}),
      e[o]("trackPageView"),
      f("https://js.monitor.azure.com/scripts/b/ai.3.gbl.min.js")
    })(window,document,0,0,"appInsights",1);
  </script>

  <!-- Custom Analytics: Scroll Depth, Engagement, Clicks -->
  <script>
    (function() {
      // Track scroll depth
      var scrollMarks = [25, 50, 75, 90, 100];
      var scrollTracked = {};

      function getScrollPercent() {
        var h = document.documentElement;
        var b = document.body;
        var st = 'scrollTop';
        var sh = 'scrollHeight';
        return Math.round((h[st]||b[st]) / ((h[sh]||b[sh]) - h.clientHeight) * 100);
      }

      window.addEventListener('scroll', function() {
        var percent = getScrollPercent();
        scrollMarks.forEach(function(mark) {
          if (percent >= mark && !scrollTracked[mark]) {
            scrollTracked[mark] = true;
            if (window.appInsights) {
              appInsights('trackEvent', {name: 'ScrollDepth', properties: {depth: mark + '%', page: location.pathname}});
            }
          }
        });
      }, {passive: true});

      // Track time on page
      var startTime = Date.now();
      window.addEventListener('beforeunload', function() {
        var timeOnPage = Math.round((Date.now() - startTime) / 1000);
        if (window.appInsights) {
          appInsights('trackEvent', {name: 'TimeOnPage', properties: {seconds: timeOnPage, page: location.pathname}});
        }
      });

      // Track outbound link clicks
      document.addEventListener('click', function(e) {
        var link = e.target.closest('a');
        if (link && link.hostname !== location.hostname) {
          if (window.appInsights) {
            appInsights('trackEvent', {name: 'OutboundClick', properties: {url: link.href, page: location.pathname}});
          }
        }
      });

      // Track internal navigation clicks
      document.addEventListener('click', function(e) {
        var link = e.target.closest('a');
        if (link && link.hostname === location.hostname && link.pathname !== location.pathname) {
          if (window.appInsights) {
            appInsights('trackEvent', {name: 'InternalNavigation', properties: {to: link.pathname, from: location.pathname}});
          }
        }
      });

      // Track guide section views (for guide pages)
      if (location.pathname.startsWith('/guides/') && location.pathname !== '/guides/') {
        var observer = new IntersectionObserver(function(entries) {
          entries.forEach(function(entry) {
            if (entry.isIntersecting && entry.target.id) {
              if (window.appInsights) {
                appInsights('trackEvent', {name: 'SectionView', properties: {section: entry.target.id, guide: location.pathname}});
              }
            }
          });
        }, {threshold: 0.5});

        document.querySelectorAll('h2[id]').forEach(function(h2) {
          observer.observe(h2);
        });
      }
    })();
  </script>

  <!-- Structured Data -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Computer Science Guide",
      "url": "https://www.computerscienceguide.com",
      "description": "Free comprehensive guides to learn computer science, programming, and software development",
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://www.computerscienceguide.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>

  <slot name="head" />
</head>
<body>
  <header class="header">
    <div class="container">
      <a href="/" class="logo">
