---
interface Props {
  title: string;
  description: string;
  canonical?: string;
  ogImage?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  canonical = Astro.url.href,
  ogImage = '/og-default.png',
  noindex = false
} = Astro.props;

const siteName = 'Computer Science Guide';
const fullTitle = title === siteName ? title : `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="generator" content={Astro.generator}>

  <!-- Google Search Console Verification -->
  <meta name="google-site-verification" content="W1fRrbtzjKXN6cAPGyiSBlyKfNfyY23qQgSy-q4-vMg">

  <!-- Bing Webmaster Tools Verification -->
  <meta name="msvalidate.01" content="E4792860CAB72733FACE91C7EE52BB14">

  <!-- Primary Meta Tags -->
  <title>{fullTitle}</title>
  <meta name="title" content={fullTitle}>
  <meta name="description" content={description}>
  {noindex && <meta name="robots" content="noindex, nofollow">}

  <!-- Canonical URL -->
  <link rel="canonical" href={canonical}>

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content={canonical}>
  <meta property="og:title" content={fullTitle}>
  <meta property="og:description" content={description}>
  <meta property="og:image" content={new URL(ogImage, Astro.site)}>
  <meta property="og:site_name" content={siteName}>

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image">
  <meta property="twitter:url" content={canonical}>
  <meta property="twitter:title" content={fullTitle}>
  <meta property="twitter:description" content={description}>
  <meta property="twitter:image" content={new URL(ogImage, Astro.site)}>

  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">

  <!-- Preconnect to third-party domains (improves LCP) -->
  <link rel="preconnect" href="https://www.googletagmanager.com">
  <link rel="preconnect" href="https://pagead2.googlesyndication.com">
  <link rel="dns-prefetch" href="https://js.monitor.azure.com">

  <!-- Structured Data: Organization -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Computer Science Guide",
      "url": "https://www.computerscienceguide.com",
      "logo": "https://www.computerscienceguide.com/logo.png",
      "description": "Free comprehensive guides to learn computer science, programming, and software development",
      "sameAs": []
    }
  </script>

  <!-- Structured Data: WebSite with SearchAction -->
  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Computer Science Guide",
      "url": "https://www.computerscienceguide.com",
      "description": "Free comprehensive guides to learn computer science, programming, and software development",
      "publisher": {
        "@type": "Organization",
        "name": "Computer Science Guide",
        "url": "https://www.computerscienceguide.com"
      },
      "potentialAction": {
        "@type": "SearchAction",
        "target": "https://www.computerscienceguide.com/search?q={search_term_string}",
        "query-input": "required name=search_term_string"
      }
    }
  </script>

  <slot name="head" />
</head>
<body>
  <header class="header">
    <div class="container">
      <a href="/" class="logo">
        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
          <line x1="8" y1="21" x2="16" y2="21"></line>
          <line x1="12" y1="17" x2="12" y2="21"></line>
        </svg>
        CS Guide
      </a>
      <nav class="nav">
        <a href="/guides">Guides</a>
        <a href="/resources">Resources</a>
        <a href="/roadmap">Roadmap</a>
        <a href="/about">About</a>
      </nav>
    </div>
  </header>

  <main>
    <slot />
  </main>

  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-col">
          <h4>Learning Paths</h4>
          <ul>
            <li><a href="/guides/programming-fundamentals">Programming Fundamentals</a></li>
            <li><a href="/guides/data-structures">Data Structures</a></li>
            <li><a href="/guides/algorithms">Algorithms</a></li>
            <li><a href="/guides/web-development">Web Development</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h4>Resources</h4>
          <ul>
            <li><a href="/resources/books">Recommended Books</a></li>
            <li><a href="/resources/courses">Online Courses</a></li>
            <li><a href="/resources/tools">Developer Tools</a></li>
            <li><a href="/resources/practice">Practice Problems</a></li>
          </ul>
        </div>
        <div class="footer-col">
          <h4>About</h4>
          <ul>
            <li><a href="/about">About Us</a></li>
            <li><a href="/contact">Contact</a></li>
            <li><a href="/privacy">Privacy Policy</a></li>
            <li><a href="/terms">Terms of Service</a></li>
          </ul>
        </div>
      </div>
      <div class="footer-bottom">
        <p>&copy; {new Date().getFullYear()} Computer Science Guide. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <style is:global>
    @import '../styles/global.css';
  </style>

  <!-- Deferred Third-Party Scripts (loaded after page content for better LCP/FCP) -->
  <script>
    // Load non-critical scripts after page is interactive
    function loadDeferredScripts() {
      // Google Analytics 4
      var gaScript = document.createElement('script');
      gaScript.src = 'https://www.googletagmanager.com/gtag/js?id=G-08FYJQ54RN';
      gaScript.async = true;
      document.head.appendChild(gaScript);

      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      window.gtag = gtag;
      gtag('js', new Date());
      gtag('config', 'G-08FYJQ54RN');

      // Google AdSense (loaded after analytics)
      setTimeout(function() {
        var adsScript = document.createElement('script');
        adsScript.src = 'https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6676281664229738';
        adsScript.async = true;
        adsScript.crossOrigin = 'anonymous';
        document.head.appendChild(adsScript);
      }, 100);

      // Azure Application Insights
      var connectionString = "InstrumentationKey=56e3930d-2200-4571-82b1-71ca51404713;IngestionEndpoint=https://eastus2-3.in.applicationinsights.azure.com/";
      window.appInsights = window.appInsights || function(){(window.appInsights.q=window.appInsights.q||[]).push(arguments)};
      window.appInsights.v = "1.0.0";
      window.appInsights("init", {connectionString: connectionString, autoTrackPageVisitTime: true, autoExceptionInstrumented: true});
      window.appInsights("trackPageView");

      var aiScript = document.createElement('script');
      aiScript.src = 'https://js.monitor.azure.com/scripts/b/ai.3.gbl.min.js';
      aiScript.async = true;
      document.head.appendChild(aiScript);
    }

    // Use requestIdleCallback for best performance, fallback to load event
    if ('requestIdleCallback' in window) {
      requestIdleCallback(loadDeferredScripts, {timeout: 2000});
    } else {
      window.addEventListener('load', loadDeferredScripts);
    }
  </script>

  <!-- Custom Analytics (runs after Azure Insights loads) -->
  <script>
    window.addEventListener('load', function() {
      setTimeout(function() {
        // Track scroll depth
        var scrollMarks = [25, 50, 75, 90, 100];
        var scrollTracked = {};

        function getScrollPercent() {
          var h = document.documentElement;
          var b = document.body;
          return Math.round((h.scrollTop || b.scrollTop) / ((h.scrollHeight || b.scrollHeight) - h.clientHeight) * 100);
        }

        window.addEventListener('scroll', function() {
          var percent = getScrollPercent();
          scrollMarks.forEach(function(mark) {
            if (percent >= mark && !scrollTracked[mark]) {
              scrollTracked[mark] = true;
              if (window.appInsights) {
                appInsights('trackEvent', {name: 'ScrollDepth', properties: {depth: mark + '%', page: location.pathname}});
              }
            }
          });
        }, {passive: true});

        // Track time on page (using visibilitychange instead of deprecated beforeunload)
        var startTime = Date.now();
        var timeTracked = false;
        document.addEventListener('visibilitychange', function() {
          if (document.visibilityState === 'hidden' && !timeTracked) {
            timeTracked = true;
            var timeOnPage = Math.round((Date.now() - startTime) / 1000);
            if (window.appInsights) {
              appInsights('trackEvent', {name: 'TimeOnPage', properties: {seconds: timeOnPage, page: location.pathname}});
            }
          }
        });

        // Track outbound link clicks
        document.addEventListener('click', function(e) {
          var link = e.target.closest('a');
          if (link && link.hostname !== location.hostname && window.appInsights) {
            appInsights('trackEvent', {name: 'OutboundClick', properties: {url: link.href, page: location.pathname}});
          }
        });

        // Track internal navigation clicks
        document.addEventListener('click', function(e) {
          var link = e.target.closest('a');
          if (link && link.hostname === location.hostname && link.pathname !== location.pathname && window.appInsights) {
            appInsights('trackEvent', {name: 'InternalNavigation', properties: {to: link.pathname, from: location.pathname}});
          }
        });

        // Track guide section views
        if (location.pathname.startsWith('/guides/') && location.pathname !== '/guides/') {
          var observer = new IntersectionObserver(function(entries) {
            entries.forEach(function(entry) {
              if (entry.isIntersecting && entry.target.id && window.appInsights) {
                appInsights('trackEvent', {name: 'SectionView', properties: {section: entry.target.id, guide: location.pathname}});
              }
            });
          }, {threshold: 0.5});

          document.querySelectorAll('h2[id]').forEach(function(h2) {
            observer.observe(h2);
          });
        }
      }, 500); // Small delay to ensure Azure Insights is loaded
    });
  </script>
</body>
</html>
